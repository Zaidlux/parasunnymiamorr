  <script>
    const music = document.getElementById("music");
    const yesBtn = document.getElementById("yes");
    const noBtn = document.getElementById("no");
    const counter = document.getElementById("counter");

    let noCount = 0;
    let yesScale = 1;

    function nextScreen(num) {
      document.querySelector(".active").classList.remove("active");
      document.getElementById("screen" + num).classList.add("active");
      music.play();
    }

    function startQuestion() {
      document.querySelector(".active").classList.remove("active");
      document.getElementById("question").classList.add("active");
    }

    noBtn.addEventListener("click", () => {
      noCount++;
      counter.textContent = "Intentos de decir que no: " + noCount;
      yesScale += 0.15;
      yesBtn.style.transform = `translate(-50%, -50%) scale(${yesScale})`;

      noBtn.style.left = Math.random() * 240 + "px";
      noBtn.style.top = Math.random() * 140 + "px";
    });

    yesBtn.addEventListener("click", () => {
      document.body.innerHTML = `
        <img src="https://media.giphy.com/media/MDJ9IbxxvDUQM/giphy.gif" width="250">
        <h1>ğŸ’–ğŸ’–ğŸ’–</h1>
        <h2>SabÃ­a que dirÃ­as que sÃ­, Sunny ğŸ˜</h2>
        <p>Feliz San ValentÃ­n ğŸŒ¹</p>
      `;
      music.play();
    });
  </script>

